        android:layout_height="wrap_content"
        android:layout_gravity="start|top"
        android:text="1"/>
    <Button
        android:id="@+id/b2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|top"
        android:text="2"/>
